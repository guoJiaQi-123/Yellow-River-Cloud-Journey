<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tyut.travel.mapper.PopularMapper">
    <resultMap id="popularMap" type="com.tyut.travel.pojo.Popular">
        <id property="pid" column="pid"/>
        <result property="productName" column="productName"/>
        <result property="price" column="price"/>
        <result property="hotline" column="hotline"/>
        <result property="status" column="status"/>
        <result property="productDesc" column="productDesc"/>
        <result property="pImage" column="pImage"/>
        <result property="cid" column="cid"/>
        <association property="category" column="cid" javaType="com.tyut.travel.pojo.Category">
            <id property="cid" column="cid"/>
            <result property="cname" column="cname"/>
        </association>
    </resultMap>
    <select id="findPopularPage" resultMap="popularMap">
        SELECT *
        FROM popular
                 LEFT JOIN category
                           on popular.cid = category.cid
        ORDER BY popular.pid DESC
    </select>
</mapper>